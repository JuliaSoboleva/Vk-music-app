<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"
                android:padding="@dimen/padding_normal"
        >

    <ImageView
            android:id="@+id/audio_image"
            android:layout_width="@dimen/icon_normal"
            android:layout_height="@dimen/icon_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_note"
            />

    <Button
            android:id="@+id/save"
            android:layout_width="@dimen/button_small"
            android:layout_height="@dimen/button_small"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:background="@drawable/download_button_selector"
            />

    <Button
            android:id="@+id/button_add"
            android:layout_width="@dimen/button_small"
            android:layout_height="@dimen/button_small"
            android:layout_toLeftOf="@id/save"
            android:layout_marginLeft="@dimen/margin_normal"
            android:background="@drawable/ic_add_black_24dp"
            android:visibility="gone"
            />


    <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/audio_image"
            android:layout_toLeftOf="@id/button_add"
            android:layout_alignTop="@id/audio_image"
            android:textSize="@dimen/font_normal"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="This is text"
            />

    <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/audio_image"
            android:layout_toLeftOf="@id/button_add"
            android:layout_below="@id/text1"
            android:textSize="@dimen/font_small"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="This is text2"
            />
</RelativeLayout>